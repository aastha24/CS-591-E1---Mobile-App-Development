                android:id="@+id/txtA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onLetterClick"
                android:padding="10dp"
                android:text="A"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtB"
