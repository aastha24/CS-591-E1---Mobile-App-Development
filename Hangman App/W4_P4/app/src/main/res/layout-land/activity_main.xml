                android:layout_height="wrap_content"
                android:onClick="onLetterClick"
                android:padding="10dp"
                android:text="D"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onLetterClick"
                android:padding="10dp"
                android:text="E"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onLetterClick"
                android:padding="10dp"
                android:text="F"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
