<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sse.lect2_activitylifecycle_logging_savingstate.MainActivity">

    <Button
        android:id="@+id/btnConvert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="67dp" />

    <EditText
        android:id="@+id/inp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Input"
        android:layout_marginTop="72dp"
        android:layout_below="@+id/radioGrouptemp"
        android:layout_toStartOf="@+id/btnConvert"
        android:layout_marginEnd="17dp" />

    <EditText
        android:id="@+id/out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoText="false"
        android:hint="Output"
        android:layout_alignBaseline="@+id/inp"
        android:layout_alignBottom="@+id/inp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGrouptemp"
        android:layout_marginTop="43dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/out"
        android:layout_marginEnd="42dp">

        <RadioButton
            android:id="@+id/radioButtonCtoF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="102dp"
            android:layout_toStartOf="@+id/out"
            android:text="Celsius to Fahrenheit"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radioButtonFtoC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/radioButtonCtoF"
            android:layout_below="@+id/radioButtonCtoF"
            android:layout_marginTop="27dp"
            android:text="Fahrenheit to Celsius" />
    </RadioGroup>
</RelativeLayout>
